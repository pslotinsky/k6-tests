{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "pretty": true,
        "forceConsistentCasingInFileNames": true,
        "lib": ["es2017"],
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitThis": true,
        "resolveJsonModule": true,
        "outDir": "dist",
        "rootDir": "src",
        "sourceMap": true,
        "target": "ES5",
        "baseUrl": "src",
        "paths": {
            "@common/*": ["common/*"],
            "@modules/*": ["modules/*"],
            "@vendors/*": ["vendors/*"]
        }
    },
    "include": [
        "src/**/*.ts", "src/index.js"
    ]
}